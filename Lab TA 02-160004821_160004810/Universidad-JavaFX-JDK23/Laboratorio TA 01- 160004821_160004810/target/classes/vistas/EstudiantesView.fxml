<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.universidad.ui.EstudianteController" spacing="10">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="120" halignment="RIGHT"/><ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints minWidth="120" halignment="RIGHT"/><ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <children>
            <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCodigo" promptText="Ej. 10" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Nombres:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="txtNombres" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <Label text="Apellidos:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtApellidos" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="txtEmail" promptText="Ej. nombre@uni.co" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            <Label text="Promedio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPromedio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Semestre:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <TextField fx:id="txtSemestre" promptText="1-12" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
        </children>
    </GridPane>
    <HBox spacing="8">
        <Button text="Crear/Actualizar" onAction="#onCrearActualizar"/>
        <Button text="Eliminar" onAction="#onEliminar"/>
        <Button text="Limpiar" onAction="#onLimpiar"/>
    </HBox>
    <TableView fx:id="tabla" prefHeight="400">
        <columns>
            <TableColumn fx:id="colCodigo" text="Código" prefWidth="120"/>
            <TableColumn fx:id="colNombres" text="Nombres" prefWidth="160"/>
            <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="160"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
            <TableColumn fx:id="colPromedio" text="Promedio" prefWidth="100"/>
            <TableColumn fx:id="colSemestre" text="Semestre" prefWidth="100"/>
        </columns>
    </TableView>
    <Label fx:id="lblEstado" text="Listo."/>
</VBox>
